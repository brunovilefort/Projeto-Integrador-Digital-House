<%- include('./partials/head', {pageTitle: 'Profile', cssName:'profile'}) %>
<%- include('./partials/navbar') %>
<main>
  <div id="container-form">
    <div id="title">
      <h2>Edição de Cadastro</h2>
    </div>
    <form action="/api/auth/userprofile/<%= clientLogged.user_id %>?_method=PUT" method="POST">
      <div class="container-fields">
        <label for="name">Nome:</label>
        <input type="text" name="name" required value="<%= clientLogged.name %> ">
        <li class="error"></li>
      </div>
      <div class="container-fields">
        <label for="phone">nº Celular:</label>
        <input type="text" name="phone" required value="<%= clientLogged.phone %> ">
        <li class="error"></li>
      </div>
      <div class="container-fields">
        <label for="password">Senha:</label>
        <input type="password" name="password" required value="<%= clientLogged.password %> ">
        <li class="error"></li>
      </div>
      <div id="container-btn">
        <button type="submit" class="btn">
          <span></span>
          <span></span>
          <span></span>
          <span></span>
          Editar
        </button>
      </div>
    </form>
    <form action="/api/auth/userprofile/<%= clientLogged.user_id %>?_method=DELETE" method="POST">
      <div id="container-btn">
        <button type="submit" class="btn">
          <span></span>
          <span></span>
          <span></span>
          <span></span>
          Excluir
        </button>
      </div>
    </form>
  </div>
</main>
<%- include('./partials/footer') %>
