<%- include('./partials/head', {pageTitle: 'Calendário', cssName:'appointment'})
%> <%- include('./partials/navbar') %>
<main>
  <div class="container">
    <div class="calendar">
      <h1 class="title"><%= title %></h1>
      <form action="/api/appointments/time" method="GET">
        <input type="hidden" name="dia" id="hidden" />
        <div class="grid-container">
          <div class="dom item">dom</div>
          <div class="seg item">seg</div>
          <div class="ter item">ter</div>
          <div class="qua item">qua</div>
          <div class="qui item">qui</div>
          <div class="sex item">sex</div>
          <div class="sab item">sab</div>
          <% for( let i = 0; i < diasMes.length; i++ ) { %>
          <input
            type="button"
            id="<%- [i] %>"
            value="<%- diasMes[i] %>"
            class="dias"
          />
          <% } %>
        </div>
        <div class="submit">
          <button class="btn" type="submit">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Reservar
          </button>
        </div>
      </form>
    </div>
    <div id="hours-container">
      <h1 class="title">Horários disponíveis</h1>
      <form action="">
        <input class="hour" type="button" value="8:00" />
        <input class="hour" type="button" value="9:00" />
        <input class="hour" type="button" value="10:00" />
        <input class="hour" type="button" value="11:00" />
        <input class="hour" type="button" value="12:00" />
        <input class="hour" type="button" value="13:00" />
        <input class="hour" type="button" value="13:00" />
        <input class="hour" type="button" value="13:00" />
        <input class="hour" type="button" value="13:00" />
        <input class="hour" type="button" value="13:00" />
        <input class="hour" type="button" value="13:00" />
        <input class="hour" type="button" value="13:00" />
      </form>
    </div>
  </div>
</main>
<%- include('./partials/footer') %>
